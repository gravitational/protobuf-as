{
  "compilerOptions": {
    "lib": ["ES2021", "DOM"],
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "outDir": "build",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "declaration": true
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "paths": {
        "uvu": ["./node_modules/uvu"],
      }  
    }
  },  
  "include": [    
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "tests/__fixtures__/**/*"
  ]
}