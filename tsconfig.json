{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018"],
    "module": "commonjs",
    "strict": true,
    "outDir": "build",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*",
    "__tests__/**/*.ts"
  ]
}
